    <TargetFramework>net8.0-windows7.0</TargetFramework>
    <RootNamespace>DrinkingBuddy</RootNamespace>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <Page Remove="Infrastructure\App.xaml" />
